<h3>Login Form:</h3>
<%= form_tag(login_path) do %>
    <label>Email:</label><br>
    <%= text_field_tag :email %><br><br>
    
    <label>Password:</label><br>
    <%= text_field_tag :password %><br><br>
    
    <%= submit_tag "Login" %>
<%= link_to('Log in with Facebook!', '/auth/facebook', method: :post) %><br>
<%= link_to('Log in with Github!', '/auth/github', method: :post) %>
<% end %>
